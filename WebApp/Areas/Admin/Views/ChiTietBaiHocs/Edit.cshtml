@model WebApp.Models.Entities.ChiTietBaiHoc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}







<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 ">
                        Chỉnh sửa chi tiết bài học
                    </div>
                    <div class="col-6 float-end">

                    </div>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdChiTietBaiHoc)

                        <div class="form-group">
                            <p class="fw-bolder" style="margin-left:20px">Nội dung</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NoiDung1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NoiDung1, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <p class="fw-bolder" style="margin-left:20px">Mã bài học</p>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.IdBaiHoc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.IdBaiHoc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-outline-warning" />
                            </div>
                        </div>
                    </div>
                }

                <div>

                    @Html.ActionLink("Quay lại", "Index")

                </div>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

