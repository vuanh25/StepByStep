@model IEnumerable<WebApp.Models.Entities.KhoaHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}








<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 ">
                        <strong>Danh sách khoá học</strong>
                    </div>
                    <div class="col-6 float-end">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p>
                    @Html.ActionLink("Thêm mới khoá học", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenKhoaHoc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IDKhoaHoc)
                        </th>


                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenKhoaHoc)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDNgonNgu)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDKhoaHoc }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IDKhoaHoc }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDKhoaHoc })
                            </td>
                        </tr>
                    }

                </table>


            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
