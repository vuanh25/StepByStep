@model WebApp.Models.Entities.LuyenCode

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Public/css/LuyenCodeAdmin.css" rel="stylesheet" />

<h2>Edit</h2>
<div class="container" style="padding-left: 5em;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chỉnh sửa thông tin bài tập</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Tên luyện tập", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLuyenTap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLuyenTap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Yêu thích", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YeuThich, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YeuThich, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group " style="display: inline-flex">
            @Html.Label("Ngôn ngữ", htmlAttributes: new { @class = "control-label col-md-2 chieu_rong" })
            <div class="col-md-8 PageList">
                @Html.EnumDropDownListFor(model => model.NgonNgu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgonNgu, "", new { @class = "text-danger" })
            </div>
            @Html.Label("Cấp độ", htmlAttributes: new { @class = "control-label col-md-2 chieu_rong" })
            <div class="col-md-8 PageList">
                @Html.EnumDropDownListFor(model => model.DoKho, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DoKho, "", new { @class = "text-danger" })
            </div>

            @*@Html.LabelFor(m => m.NgonNgu )
        @Html.DropDownListFor(m => m.NgonNgu,
             new SelectList( Model.NgonNgu  , new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NgonNgu)*@
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
