@model IEnumerable<WebApp.Models.Entities.BaiHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 ">
                        <strong>Danh sách bài học</strong>
                    </div>
                    <div class="col-6 float-end">
                    </div>
                </div>
            </div>
            <div class="card-body">
                
                <div class="row">
                    @using (Html.BeginForm("Index", "BaiHocs", FormMethod.Get))
                    {
                        <p>
                            Tìm theo khoá học: @Html.TextBox("TenKhoaHoc",ViewBag.CurrentFilter as string)
                            <input type="submit" value="Tìm kiếm" />
                        </p>
                    }

                <div style="margin-left: 10px">
                    @Html.ActionLink("Create New", "Create")
                </div>
                   

                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenBaiHoc)
                        </th>



                        <th></th>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenBaiHoc)
                                </td>


                                <td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.IdBaiHoc }) |
                                    @Html.ActionLink("Chi tiết bài học", "Details", new { id = item.IdBaiHoc }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.IdBaiHoc })
                                </td>
                            </tr>

                        }
                    }



                </table>

            </div>
            <!-- /.card-body -->
         
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

