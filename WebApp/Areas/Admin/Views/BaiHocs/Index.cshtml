@model IEnumerable<WebApp.Models.Entities.BaiHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 ">
                        <strong>Danh sách bài học</strong>
                    </div>
                    <div class="col-6 float-end">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <form class=" d-flex flex-row align-items-center flex-wrap" action="~/Admin/BaiHocs/Index">
                        <label for="search" class="mx-2 my-1">Tìm kiếm khóc học</label>
                        <input type="search" class="form-control w-auto"
                               id="id" name="search"
                               value="@ViewBag.Id"
                               placeholder="Search" />
                        <button type="submit" class="btn btn-primary mx-2">Go</button>
                    </form>
                    @Html.ActionLink("Create New", "Create")
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenBaiHoc)
                        </th>
                      


                        <th></th>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenBaiHoc)
                                </td>


                                <td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.IdBaiHoc }) |
                                    @Html.ActionLink("Chi tiết bài học", "Details", new { id = item.IdBaiHoc }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.IdBaiHoc })
                                </td>
                            </tr>
                        }
                    }


                </table>

            </div>
            <!-- /.card-body -->
         
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

