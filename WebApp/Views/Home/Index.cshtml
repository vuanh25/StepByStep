    @*                      BÀI TẬP HAY                     *@
    @using WebApp.Models.Entities;
    @{
        var products = Session["products"] as List<LuyenCode>;
        var dem = 0;
    }

<div class="bg-dark text-white pd-t-16">
    <div class="text-center " style="display: block;">
        <h5 style="font-family: Montserrat; font-style: unset; ">BÀI TẬP THỊNH HÀNH</h5>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="container font ">
            <div class="row justify-content-around">

           @foreach (var item in products)
            {
                dem++;
                    
                <div class="col-4 font can_giua">
                    <a href="@Url.Action("ChiTiet", "LuyenCode", new { @id = item.Id}) " class="cung-dong a text-white">
                        <div class="panel panel-default " style="justify-items: center; ">
                            <div class="panel panel-heading text-white PageList can_giua chuyen-vang">
                                <h5>@item.TenLuyenTap</h5>
                            </div>
                            <div class="panel-body ">
                                <p class="can_giua">
                                    <span>
                                        <i class="far fa-fw fa-eye mr-5"></i> @item.LuotXem
                                        <i class="heart-checkbox-true"></i>  @item.YeuThich
                                    </span>
                                    <br />
                                </p>
                                <div class="can_giua">
                                    <p>
                                        <img style="width : 250px" src="~/Content/images/b.jpg" />
                                    </p>
                                </div>
                                <br />
                            </div>
                        </div>
                    </a>
                </div>
                    
                if (dem == 6)
                {
                    break;
                }
            }
            </div>

        </div>
    }
</div>




    @*                           FOOTER                             *@

