<link href="~/Public/css/_Layout.css" rel="stylesheet" />

@if (@Session["TenTaiKhoan"] != null)
{
    using (Html.BeginForm("LogOut", "User", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div style="display:flex" class="nav-item dropdown align-content-end ">
            <a class="nav-link dropdown-toggle text-white" href="@Url.Action("ShowInfor","User")" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Xin chào  @Session["TenNguoiDung"]
            </a>
            <ul class="dropdown-menu">
                @if (@Session["TenNguoiDung"] != null && @Session["TenNguoiDung"].Equals("admin") )
                {
                    <li class="dropdown-item noUnderlined font" style="font-size: 16px;">
                        <a href="@Url.Action("IndexAdmin","Admin/Dashboard")">Quản lý trang</a>
                    </li>
                }
                <li class="dropdown-item noUnderlined font" style="font-size: 16px;">
                    <a href="@Url.Action("ShowInfor","User")">Cài đặt</a>
                </li>
                <li><a class="dropdown-item noUnderlined text-red " style="font-size: 16px;" href="javascript:document.getElementById('logoutForm').submit(0)">Đăng xuất</a></li>


            </ul>
        </div>
    }
}
else
{
    <div style="display:flex" class="nav-item dropdown align-content-end">
        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Tài khoản
        </a>
        <ul class="dropdown-menu" style="font-size:16px;">
            <li class="dropdown-item noUnderlined text-black font">@Html.ActionLink("Đăng ký", "Register", "User", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li class="dropdown-item noUnderlined text-black font">@Html.ActionLink("Đăng nhập", "Login", "User", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Loading...</a></li>
        </ul>
    </div>
}