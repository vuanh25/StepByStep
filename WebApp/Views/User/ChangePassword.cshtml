@using (Html.BeginForm("ChangePassword", "User"))
{
    <h4 class="p-5">Đổi mật khẩu</h4>
    <div class="row p-2">
        <div class="col-md-3 form-it ">
            <label>Mật khẩu hiện tại</label>          
        </div>
        <div class="col-md-6 ">
            <input type="password" placeholder="***************" name="old_pass">
        </div>
    </div>
    <div class="row p-2">
        <div class="col-md-3 form-it">
            <label>Mật khẩu mới</label>
            
        </div>
        <div class="col-md-6">
            <input type="password" placeholder="***************" name="new_pass">
        </div>
    </div>
    <div class="row p-2">
        <div class="col-md-3 form-it">
            <label>Xác nhận mật khẩu mới</label>
            
        </div>
        <div class="col-md-6">
            <input type="password" placeholder="*************** " name="confirm_pass">
        </div>
    </div>
    <div class="row p-2">
        <div class="col-md-2">
            <input class="submit btn btn-primary" type="submit" value="Lưu thay đổi">
        </div>
    </div>
}
