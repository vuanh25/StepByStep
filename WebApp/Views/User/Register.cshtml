
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout_Ngan.cshtml";
}
<link href="~/Public/css/_Layout.css" rel="stylesheet" />

<br />
<br />
<br />
<br />
<br />

<div class="container font">
    <!-- Outer Row -->
    <div class="row small-bg" style="position: relative">
        <div class="col-xl-8 col-lg-6" style="position: relative">

            <div class="block-head-text justify-content-end">
                <div class="h11">Bước từng bước <br /></div>
                <div class="h33">Khơi dậy niềm đam mê lập trình</div>
                <p></p>
            </div>
            <div class="wrap-block-head-text">
            </div>
        </div>
        <div class="col-xl-4 row small-bg">
            <div class="card o-hidden border-0 shadow-lg my-5 col-xl-12">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="">
                        <div class="">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">ĐĂNG KÝ THÀNH VIÊN</h1>
                                </div>
                                @using (Html.BeginForm(new { @class = "user" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="form-group p-2">
                                        @Html.TextBox("TenUser", null, new { @class = "form-control form-control-user", id = "exampleName", placeholder = "Họ và tên" })
                                        <div class="text-danger">
                                            @ViewData["Err1"]
                                        </div>
                                    </div>

                                    <div class="form-group p-2">
                                        <div class="">
                                            @Html.TextBox("Email", null, new { type = "email", @class = "form-control form-control-user", id = "exampleEmail", placeholder = "Địa chỉ email" })
                                            <div class="text-danger"> @ViewData["Err2"] </div>
                                        </div>
                                    </div>
                                    <div class="form-group p-2">
                                        @Html.TextBox("TenTaiKhoan", null, new { @class = "form-control form-control-user", id = "exampleUsername", placeholder = "Tên đăng nhập" })
                                        <div class="text-danger"> @ViewData["Err3"] </div>
                                    </div>
                                    <div class="form-group">
                                        <div class=" p-2">
                                            @Html.TextBox("MatKhau", null, new { type = "password", @class = "form-control form-control-user", id = "examplePassword", placeholder = "Mật khẩu" })
                                            <div class="text-danger"> @ViewData["Err4"] </div>
                                        </div>
                                        <div class="p-2">
                                            @Html.TextBox("NhapLaiMatKhau", null, new { type = "password", @class = "form-control form-control-user", id = "exampleRepeatPassword", placeholder = "Nhập lại mật khẩu" })
                                            <div class="text-danger"> @ViewData["Err5"] </div>
                                        </div>
                                    </div>
                                    <div class="form-group dt-center  p-2 ">
                                        <input class="form-control form-control-user btn-dangnhap" id="btnSubmit" type="Submit" value="Đăng ký" />
                                    </div>
                                }
                                <div class="text-center noUnderlined text-black">
                                    @Html.ActionLink("Quên mật khẩu", "ForgotPassword", new { @class = "small" })
                                </div>
                                <div class="text-center noUnderlined text-black">
                                    @Html.ActionLink("Đăng nhập", "Login", new { @class = "small" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>