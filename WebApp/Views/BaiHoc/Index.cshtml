            $.ajax({
                url: '/BaiHoc/ListBaiHoc',
                type: 'get',
                success: function (data) {
                    if (data.code == 200) {
                        $.each(data.listBaiHoc, function (k, v) {
                            let a = '<a class="list-group-item p-1 p-lg-1 list-group-item-action list-group-item-warning" id="' + v.IdBaiHoc + '">';
                            a += v.TenBaiHoc;
                            a += '</a>'
