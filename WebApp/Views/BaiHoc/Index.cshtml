
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*              BÀI HỌC                 *@
<body>
    <div class="row">
        <div class="col-3" id="tblListBaiHoc">
            <span class="list-group-item p-1 p-lg-1 bg-danger text-light">@ViewBag.NameKhoaHoc</span>

        </div>
        <div class="col-9" id="tblListChiTietBaiHoc">

