@model WebApp.Models.Entities.CauHoi
@{
    ViewBag.Title = "ChiTietCauHoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="media">
        <h1 class="mb-10 font-size-h2">
            @Model.TieuDe
        </h1>
        <div class="text-muted font-size-xs">
            <span class="mr-5 mt-5 d-block d-md-inline">
                <i class="far fa-fw fa-eye mr-5">

                </i>
                <span class="font-italic">@Model.LuotXem</span>
                Lượt xem
            </span>
            <span class="mr-5 mt-5 d-block d-md-inline">
                <i class="far fa-fw fa-comment mr-5">
                </i>
                <span class="font-italic">5</span>
                Phản hồi
            </span>
        </div>
        <div class="mt-5 d-flex justify-content-between">
            <a href="#" class="post">@Model.NgonNgu</a>
        </div>
    </div>
</div>

<div class="container">
    <div>
        <p>@Model.NoiDungCauHoi</p>
        <img style="width:40em" src="@Model.HinhAnh" />
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <div class="form-group">
                <label for="comment">Phản hồi:</label>
                <textarea class="form-control" rows="5" id="comment"></textarea>
            </div>
            <a class="btn btn-success" href="@Url.Action("ThemPhanHoi", "PhanHoi")">Trả lời</a>
        </div>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
