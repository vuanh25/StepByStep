@section scripts
{
    <script>
        $(document).ready(function () {
            PhanHoi();
        })
        function PhanHoi() {
            $.ajax({
                url: '/PhanHoi/DsPhanHoi',
                type: 'post',
                datatype: 'json',
                data: { id: $('#phanhoi').data('id'),loai:0 },
                success: function (data) {
                    $('#phanhoi').empty();
                    if (data.code == 200) {
                        let lphanhoi = data.sophanhoi;
                        $('#phanhoi').append(lphanhoi);
                    }
                }
            });
        }
    </script>
}

