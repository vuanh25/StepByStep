        function LuotThich() {
            $.ajax({
                url: '/BaiViet/LuotThich',
                type: 'post',
                datatype: 'json',
                data: { idBaiViet: $('#luotthich').data('id') },
                success: function (data) {
                    $('#luotthich').empty();
                    if (data.code == 200) {
                        let lt = data.luotthich;
                        $('#luotthich').append(lt);
                    }
                }
            });
        }

        function DsPhanHoi() {
            $.ajax({
                url: '/PhanHoi/DsPhanHoi',
                type: 'post',
                datatype: 'json',
                data: { idBaiViet: $('#dsphanhoi').data('id') },
                success: function (data) {
                    $('#dsphanhoi').empty();
                    if (data.code == 200) {
                        $.each(data.ds, function (k, v) {
                            let tr = '<div>' + v.NoiDung + '</div>';
                            $('#dsphanhoi').append(tr);
                        })
                    }
                }
            });
        }

    </script>
