            LuotThich();
        });

        $('#addComment').click(function () {
            let noidung = $('#phanhoi').val().trim();
            if (noidung.length == 0) {
                alert('Phản hồi không được để trống !');
                return;
            }
            $.ajax({
                url: '/PhanHoi/ThemPhanHoi',
                type: 'post',
                datatype: 'json',
                data: { id: $(this).data('id'), noidung: noidung, loai: 0 },
                success: function (data) {
                    if (data.code == 200) {
                        $('#phanhoi').val('');
                        DsPhanHoi();
                        console.log(id);
                    }
                    else {
                        alert("Đăng nhập để phản hồi !")
                    }
                }
            });
        });

        function LuotThich() {
            $.ajax({
                url: '/BaiViet/LuotThich',
                type: 'post',
                datatype: 'json',
                data: { idBaiViet: $('#luotthich').data('id') },
                success: function (data) {
                    $('#luotthich').empty();
                    if (data.code == 200) {
                        let lt = data.luotthich;
                        $('#luotthich').append(lt);
                    }
                }
            });
        }

        function DsPhanHoi() {
            $.ajax({
                url: '/PhanHoi/DsPhanHoi',
                type: 'post',
                datatype: 'json',
                data: { id: $('#dsphanhoi').data('id'), loai:0 },
                success: function (data) {
                    $('#dsphanhoi').empty();
                    $('#sophanhoi').empty();
                    if (data.code == 200) {
                        $.each(data.ds, function (k, v) {
                            let tr = '<div class="link-primary">' + v.User.TenTaiKHoan + '</div>'
                            tr += '<div>' + v.NoiDung + '</div>';
                            tr += '<hr />';
                            $('#dsphanhoi').append(tr);
                        })
                        let lphanhoi = data.sophanhoi;
                        $('#sophanhoi').append(lphanhoi);
                    }
                }
            });
        }

    </script>
}

