@model WebApp.Models.Entities.BaiViet

@{
    ViewBag.Title = "ChiTietBaiViet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Public/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Public/css/checkbox_heart.css" rel="stylesheet" />

<div class="container mb-5">
    <div class="media">
        <h1 class="mb-10 font-size-h2">
            @Model.TieuDe
        </h1>
        <div class="text-muted font-size-xs">
            <span class="mr-5 mt-5 d-block d-md-inline">
                <span class="font-italic">
                    <i class="far fa-fw fa-eye mr-5"></i>
                    @Model.LuotXem lượt xem
                </span>
                <span class="font-italic">
                    @*<i class="far fa-fw fa-heart"></i>*@
                    @*<button type="radio" class="far fa-fw fa-heart" data-id="@Model.IdBaiViet" id="btnLike"> </button>*@
                    <input class="far fa-fw fa-heart" type="checkbox" id="cbLike" checked autocomplete="off">
                    <input class="heart-checkbox-true" type="checkbox" >

                    <span id="luotthich"> </span> <span>lượt thích</span>
                </span>
                <span class="font-italic">
                    <i class="far fa-fw fa-comment mr-5"></i>
                    5 phản hồi
                </span>
            </span>
        </div>
        <div class="mt-5 d-flex justify-content-between">
            <a href="#" class="post">@Model.NgonNgu</a>
        </div>

        <div>
            <p>@Model.NoiDungBaiViet</p>
            <img src="@Model.HinhAnh" />
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <hr />
                <h2>Phản hồi</h2>
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <textarea class="form-control input-lg" rows="5" id="comment"></textarea>
                </div>
                    <a class="btn btn-success" href="@Url.Action("ThemPhanHoi", "PhanHoi")">Đăng</a>
                </div>
            </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $('#cbLike').click(function () {
        var id=$(this).data('id');
        $.ajax({
            url: '/BaiViet/Thich',
            type: 'post',
            datatype: 'json',
            data: { idBaiViet: id.toString() },
            success: function (data) {
                if (code == 200) {
                    $("luotthich").text(luotthich);
                } 
            }
        });
    });
</script>